<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@color/white"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Job Title -->
        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Mathematics Teacher Needed" />

        <!-- Status -->
        <TextView
            android:id="@+id/tv_job_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/status_background_active"
            android:padding="4dp"
            android:text="Active"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <!-- Subject, Applicants, and Posted Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_subject"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                tools:text="Mathematics" />

            <TextView
                android:id="@+id/tv_applicant_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="5 Applicants"
                android:textColor="#757575"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_posted_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#757575"
                android:textSize="12sp"
                tools:text="Posted 3 hours ago" />
        </LinearLayout>

        <!-- Job Description -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#616161"
            android:textSize="14sp"
            tools:text="Looking for a qualified mathematics teacher..." />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_applicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Applicants"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Edit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#4CAF50"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Delete"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#F44336"
                app:strokeWidth="1dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>