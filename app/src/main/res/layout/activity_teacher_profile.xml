<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background_gradient"
    android:orientation="vertical"
    tools:context=".Teacher.TeacherProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_32sdp">

            <!-- Header Section with Card Background -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/merriweather_bold"
                        android:text="@string/create_profile"
                        android:textColor="@color/darkSky"
                        android:textSize="@dimen/_24sdp" />

                    <!-- Profile Image Section -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_16sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_130sdp"
                            android:elevation="@dimen/_4sdp"
                            android:src="@drawable/user"
                            app:civ_border_color="@color/sky"
                            app:civ_border_width="3dp" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/add_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:contentDescription="@string/add_icon"
                            android:elevation="@dimen/_8sdp"
                            app:backgroundTint="@color/sky"
                            app:fabSize="mini"
                            app:srcCompat="@drawable/add"
                            app:tint="@color/white" />
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Form Fields -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/albert_sans_medium"
                        android:text="Personal Information"
                        android:textColor="@color/darkSky"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <!-- Name Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameLay"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/white"
                        android:fontFamily="@font/albert_sans_medium"
                        android:hint="@string/name"
                        app:boxStrokeColor="@color/sky"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/sky"
                        app:startIconDrawable="@drawable/user"
                        app:startIconTint="@color/sky">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/albert_sans_medium"
                            android:inputType="textPersonName"
                            android:textColor="@color/darkSky" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phone Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneLay"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@color/white"
                        android:fontFamily="@font/albert_sans_medium"
                        android:hint="@string/phone_number"
                        app:boxStrokeColor="@color/sky"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/sky"
                        app:startIconDrawable="@android:drawable/ic_menu_call"
                        app:startIconTint="@color/sky">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/albert_sans_medium"
                            android:inputType="phone"
                            android:textColor="@color/darkSky" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Address Information -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/albert_sans_medium"
                        android:text="Location Information"
                        android:textColor="@color/darkSky"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <!-- Address Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/addLay"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/albert_sans_medium"
                        android:hint="@string/address"
                        app:boxStrokeColor="@color/sky"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/sky"
                        app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                        app:startIconTint="@color/sky">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/albert_sans_medium"
                            android:inputType="textPostalAddress"
                            android:textColor="@color/darkSky" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- State & City Spinners -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:fontFamily="@font/albert_sans_medium"
                                android:text="State"
                                android:textColor="@color/sky" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardElevation="0dp"
                                app:strokeColor="@color/sky"
                                app:strokeWidth="1dp">

                                <Spinner
                                    android:id="@+id/stateSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_48sdp"
                                    android:fontFamily="@font/albert_sans_medium"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_8sdp"
                                    android:paddingEnd="@dimen/_8sdp" />
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:fontFamily="@font/albert_sans_medium"
                                android:text="City"
                                android:textColor="@color/sky" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardElevation="0dp"
                                app:strokeColor="@color/sky"
                                app:strokeWidth="1dp">

                                <Spinner
                                    android:id="@+id/citySpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_48sdp"
                                    android:fontFamily="@font/albert_sans_medium"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_8sdp"
                                    android:paddingEnd="@dimen/_8sdp" />
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Professional Information -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/albert_sans_medium"
                        android:text="Professional Details"
                        android:textColor="@color/darkSky"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <!-- Experience Spinner -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:fontFamily="@font/albert_sans_medium"
                        android:text="Experience"
                        android:textColor="@color/sky" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/sky"
                        app:strokeWidth="1dp">

                        <Spinner
                            android:id="@+id/experience"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:fontFamily="@font/albert_sans_medium"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_8sdp" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Resume Upload Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:fontFamily="@font/albert_sans_medium"
                            android:text="Resume"
                            android:textColor="@color/sky" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/sky"
                            app:strokeWidth="1dp">

                            <TextView
                                android:id="@+id/upload_resume_button"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_48sdp"
                                android:drawableEnd="@drawable/arrow"
                                android:fontFamily="@font/albert_sans_medium"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/_12sdp"
                                android:paddingEnd="@dimen/_12sdp"
                                android:text="@string/upload_resume"
                                android:textColor="@color/sky"
                                android:textSize="@dimen/_14sdp" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/selected_file_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="@dimen/_4sdp"
                            android:text="@string/no_file_selected"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <!-- Bio Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:fontFamily="@font/albert_sans_medium"
                        android:text="Bio"
                        android:textColor="@color/sky" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/sky"
                        app:strokeWidth="1dp">

                        <EditText
                            android:id="@+id/bio"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/albert_sans_medium"
                            android:gravity="top|start"
                            android:hint="@string/bio"
                            android:inputType="textMultiLine"
                            android:padding="@dimen/_12sdp"
                            android:textColor="@color/darkSky"
                            android:textColorHint="@color/darkSky" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/albert_sans_medium"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                app:cornerRadius="@dimen/_12sdp"
                app:elevation="@dimen/_4sdp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>